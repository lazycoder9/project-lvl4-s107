extends /layouts/application.pug

block content
  .container
    .row
      .col-lg-3.col-md-2
      .col-lg-6.col-md-8.col-12
        form.form-signin(action=urlFor('session'), method='post')
          h2.form-signin-heading.mb-2.mt-2 Please log in
          label.sr-only(for='inputEmail') Email address
          input#inputEmail.form-control.mb-2(name='form[email]' type='email', placeholder='Email address', required='', autofocus='')
          label.sr-only(for='inputPassword') Password
          input#inputPassword.form-control.mb-2(name='form[password]' type='password', placeholder='Password', required='')
          button.btn.btn-lg.btn-success.btn-block(type='submit') Log in
      .col-lg-3.col-md-2
