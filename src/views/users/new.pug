extends /layouts/application.pug

block content
  +formFor(f, { url: urlFor('users'), method: 'post' })
    +input(f, 'email', 'Email:')
    +input(f, 'firstName', 'First name:')
    +input(f, 'lastName', 'Last name:')
    +input(f, 'password', 'Password:', { as: 'password' })
    +button(f, 'submit', 'Sign up')

  .container
    .row
      .col-4
      .col-4
        form.form-signin(action=urlFor('users'), method='post')
          h2.form-signin-heading Please fill the blanks
          label.sr-only(for='inputEmail') Email address
          input#inputEmail.form-control.mb-2(name='form[email]' type='email', placeholder='Email address', required='', autofocus='')
          label.sr-only(for='inputEmail') First name
          input#inputFirstName.form-control.mb-2(name='form[firstName]' placeholder='First name', required='', autofocus='')
          label.sr-only(for='inputEmail') Last name
          input#inputEmail.form-control.mb-2(name='form[lastName]' placeholder='Last name', required='', autofocus='')
          label.sr-only(for='inputPassword') Password
          input#inputPassword.form-control.mb-2(name='form[password]' type='password', placeholder='Password', required='')
          button.btn.btn-lg.btn-success.btn-block(type='submit') Log in
      .col-4
