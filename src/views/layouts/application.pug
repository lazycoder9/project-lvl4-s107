include /mixins/forms.pug

doctype html
html(lang="en")
  head
    title Lazy Task Manager
    script(src='/assets/vendor.js')
    script(src='/assets/application.js')
    link(href='//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet')
    script(src='//code.jquery.com/jquery-1.12.0.min.js')
    script(src='//code.jquery.com/jquery-migrate-1.2.1.min.js')
    script(src='//netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')    
  body
    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
      button.navbar-toggler.navbar-toggler-right
        span.navbar-toggler-icon
      a.navbar-brand(href="/") Task Manager
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          if isSignedIn()
            li.nav-item.active
              a.nav-link(href=urlFor('users')) Users
            li.nav-item.active
              a.nav-link(href=urlFor('tasks')) Tasks
        ul.navbar-nav
          if isSignedIn()
            li.nav-item
              a.nav-link(href=urlFor('session') data-method='delete' rel='nofollow') Sign Out
          else
            li.nav-item
              a.nav-link(href=urlFor('newSession')) Sign In
            li.nav-item
              a.nav-link(href=urlFor('newUser')) Sign Up
    .container
      - const msg = flash.get()
      if msg
        .alert.alert-info.m-3= msg
      block content
